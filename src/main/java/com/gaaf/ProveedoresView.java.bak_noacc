package com.gaaf;
import javafx.geometry.*; import javafx.scene.control.*; import javafx.scene.control.cell.PropertyValueFactory;
import javafx.scene.image.*; import javafx.scene.layout.*; import javafx.scene.control.TableView;
public class ProveedoresView {
    private final BorderPane root; private final TableView<ProveedorRow> tabla = new TableView<>();
    private final Label pie = new Label("Listo."); private final ProveedorDAO dao = new ProveedorDAO();
    public ProveedoresView(App app){
        root = new BorderPane(); root.setPadding(new Insets(6));
        Button btnBack = new Button("\u2190 Regresar"); btnBack.setOnAction(e -> app.mostrarHome());
        ImageView logo = new ImageView(new Image(getClass().getResource("/img/logo.png").toExternalForm())); logo.setFitHeight(24); logo.setPreserveRatio(true);
        Label titulo = new Label("Proveedores"); titulo.getStyleClass().add("titulo");
        HBox header = new HBox(8, btnBack, logo, titulo); header.setAlignment(javafx.geometry.Pos.CENTER_LEFT); header.setPadding(new Insets(6));
        configurarTabla(); cargarDB();
        tabla.setPrefHeight(320);
BorderPane panelTabla = new BorderPane(tabla); panelTabla.setPadding(new Insets(8));
        panelTabla.setStyle("-fx-background-color:#ffffff; -fx-border-color:#d0d3d9; -fx-border-radius:10; -fx-background-radius:10;");
        VBox cuerpo = new VBox(6, header, panelTabla);
        root.setCenter(cuerpo); root.setBottom(pie); BorderPane.setMargin(pie, new Insets(6,10,10,10));
        root.getStylesheets().add(getClass().getResource("/styles.css").toExternalForm());
    }
    private void configurarTabla(){
        TableColumn<ProveedorRow,Integer> cId = new TableColumn<>("ID_proveedor"); cId.setCellValueFactory(new PropertyValueFactory<>("idProveedor"));
        TableColumn<ProveedorRow,String> cNom = new TableColumn<>("Nombre"); cNom.setCellValueFactory(new PropertyValueFactory<>("nombre"));
        TableColumn<ProveedorRow,String> cDir = new TableColumn<>("DirecciÃƒÂ³n"); cDir.setCellValueFactory(new PropertyValueFactory<>("direccion"));
        TableColumn<ProveedorRow,String> cTel = new TableColumn<>("TelÃƒÂ©fono"); cTel.setCellValueFactory(new PropertyValueFactory<>("telefono"));
        TableColumn<ProveedorRow,String> cCor = new TableColumn<>("Correo"); cCor.setCellValueFactory(new PropertyValueFactory<>("correo"));
        TableColumn<ProveedorRow,String> cCiu = new TableColumn<>("Ciudad"); cCiu.setCellValueFactory(new PropertyValueFactory<>("ciudad"));
        TableColumn<ProveedorRow,String> cVer = new TableColumn<>("Vereda"); cVer.setCellValueFactory(new PropertyValueFactory<>("vereda"));
        TableColumn<ProveedorRow,String> cObs = new TableColumn<>("Observaciones"); cObs.setCellValueFactory(new PropertyValueFactory<>("observaciones"));
        TableColumn<ProveedorRow,Integer> cAct = new TableColumn<>("Activo"); cAct.setCellValueFactory(new PropertyValueFactory<>("activo"));
        tabla.getColumns().setAll(cId,cNom,cDir,cTel,cCor,cCiu,cVer,cObs,cAct);
        tabla.setColumnResizePolicy(TableView.CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN);
    }
    private void cargarDB(){
        try { tabla.getItems().setAll(dao.listar()); pie.setText("Proveedores cargados desde base de datos."); }
        catch(Exception ex){ new Alert(Alert.AlertType.ERROR,"Error cargando proveedores: "+ex.getMessage()).showAndWait(); pie.setText("Error al cargar proveedores."); }
    }
    public BorderPane getRoot(){ return root; }
}

